" General Settings
" -----------------------------------------------------------------------------
set relativenumber
set scrolloff=4
set showmode
set showcmd
set visualbell
set clipboard+=unnamed
set ignorecase
set smartcase
set incsearch
set hlsearch

" Leader
" -----------------------------------------------------------------------------
let mapleader = " "

" Plugins
" -----------------------------------------------------------------------------
set highlightedyank
set sneak
set nerdtree

set easymotion
set notimeout

set surround
